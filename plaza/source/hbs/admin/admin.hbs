
<div class="admin js-login_box {{#unless session.user_id}}hide{{/unless}}">
	{{#if session.user_id}}
	<div class="grid grid--guttered">
		<div class="col">
			<button class="js-logout">{{pieces.admin.logout}}</button>
		</div>
	</div>
	{{else}}
	<form action="#" class="js-submit_login">
		<label for="email">{{pieces.admin.email_label}}</label>
		<input type="email" id="email" name="email">
		<label for="password">{{pieces.admin.password_label}}</label>
		<input type="password" id="password" name="password">
		<button type="submit">{{pieces.admin.submit}}</button>
	</form>
	{{/if}}
</div>